        <!-- <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/> -->
        <!-- </intent-filter> -->
        <!-- </service> -->

        <activity android:name="com.payano.homeassistant.FingerprintActivity"></activity>
    </application>

</manifest>